<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="E-sports Wiki yang dibuat dari komunitas dan untuk komunitas. inspired by liquipedia"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_dota"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/layout1"
        android:layout_alignParentStart="true"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/logo_dota" />

    <ImageButton
        android:id="@+id/btn_cs"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/layout1"
        android:layout_marginStart="30dp"

        android:layout_marginTop="66dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/btn_dota"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/logo_cs" />

    <ImageButton
        android:id="@+id/btn_r6"
        android:layout_width="180dp"
        android:layout_height="180dp"


        android:layout_below="@+id/btn_dota"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="115dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/logo_r6" />


</RelativeLayout>