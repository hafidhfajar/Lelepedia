<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackhalf">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/players" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Player"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"/>

    <TextView
        android:id="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text1"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        android:text="Nama " />

    <TextView
        android:id="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text2"
        android:textColor="@color/white"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="8dp"
        android:text="Nickname" />

    <TextView
        android:id="@+id/Text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text3"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:text="Team" />

    <TextView
        android:id="@+id/Text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Text4"
        android:textColor="@color/white"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="8dp"
        android:text="Tanggal Join" />

    <EditText
        android:id="@+id/TextNama"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_toEndOf="@+id/Text2"
        android:textColor="@color/white"
        android:layout_below="@id/Text1"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TextNickname"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextNama"
        android:textColor="@color/white"
        android:layout_marginStart="36dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Text3"
        android:ems="10"
        android:hint="Nickname"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextNickname"
        android:textColor="@color/white"
        android:layout_marginStart="64dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Text4"
        android:entries="@array/team_dota" />


    <EditText
        android:id="@+id/TextTanggal"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/Spinner"
        android:layout_marginStart="19dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/Text5"
        android:ems="10"
        android:hint="DDMMYYYY"
        android:inputType="datetime" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:text="Tambah" />
</RelativeLayout>